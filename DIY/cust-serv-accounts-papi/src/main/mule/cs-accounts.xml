		<set-payload value="#[output application/json&#10;---&#10;{&#10;	numAccounts: sizeOf(payload),&#10;	userId: vars.userID,&#10;	custAccountType: vars.accountType,&#10;	accounts: payload&#10;}]" doc:name="Set Payload" doc:id="62dbb946-0851-47fc-a6b5-d003126b9ea5" />
		<logger level="INFO" doc:name="Log Mule Message" doc:id="b3e73c15-9f35-43dd-a9f7-7e6ba603dc85" />
	</flow>
	<sub-flow name="setUserID" doc:id="006f3e39-1f37-4ae2-8572-d90a868f6f95" >
