		<flow-ref doc:name="setUserID" doc:id="de144610-c744-4023-bec3-635d1323a99d" name="setUserID"/>
		<http:request method="GET" doc:name="Invoke Accounts API" doc:id="a2ede0fe-a433-4de4-aeae-3b37fdf0fa95" config-ref="HTTP_Request_configuration" path="/accounts">
